<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <record id="view_client_module_filter" model="ir.ui.view">
            <field name="name">ir.module.module.list.select</field>
            <field name="model">ir.module.module</field>
            <field name="arch" type="xml">
                <search string="Search modules">
                    <field
                        name="name"
                        filter_domain="['|', '|', ('summary', 'ilike', self), ('shortdesc', 'ilike', self), ('name',
                        'ilike', self)]"
                        string="Module"
                    />
                    <filter
                        name="installed"
                        string="Installed"
                        domain="[('state', 'in', ['installed', 'to upgrade', 'to remove'])]"
                    />
                    <filter
                        string="Not Installed"
                        domain="[('state', 'in', ['uninstalled', 'uninstallable', 'to install'])]"
                    />
                </search>
            </field>
        </record>
        <record id="open_client_open_module_tree" model="ir.actions.act_window">
            <field name="name">Apps</field>
            <field name="res_model">ir.module.module</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('is_super_app', '=', True)]</field>
            <field name="search_view_id" ref="view_client_module_filter" />
            <field name="help" type="html">
                <p>
                    <b>No module found!</b>
                </p>
                <p>You should try other search criteria.</p>
            </field>
        </record>
        <menuitem
            sequence="309"
            id="menu_apps"
            name="Apps"
            action="open_client_open_module_tree"
            groups="base.group_system"
            web_icon="apps,static/description/modules.png"
        />
        <menuitem id="base.menu_management" name="All Apps" />
    </data>
</openerp>
